<!-- views/pages/market.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/header %>
</head>
<body>
<div class="nav-container">
    <% include partials/nav %>
</div>
<div class="home-container">
    <div id="home-top">
        <div id="home-left">
            <div class="card" style="width: 46rem; height: 20rem;">
                <div class="card-body">
                    <h2 class="card-title">Create new Listing</h2>
                    <p class="card-text">Create a listing to rent our your assets or to request an asset that you
                        need!</p>
                    <a href="/createListing" class="card-link">Create new listing</a>
                </div>
            </div>
        </div>
        <div id="home-right">
            <div class="card" style="width: 46rem; height: 20rem;">
                <div class="card-body">
                    <h2 class="card-title">Register new asset</h2>
                    <p class="card-text">Register a new asset with RYA for easy management!</p>
                    <a href="/addAsset" class="card-link">Register asset</a>
                </div>
            </div>
        </div>
    </div>
    <h3>Browse existing listings on the marketplace
        <hr/>
    </h3>

    <div id="home-bottom">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <% for(i = 0; i < data.length; i++){ %>
                <% if(data[i].featured){ %>
                <% if(i == 1){ %>
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <% }else{ %>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <% } %>
                <% } %>
                <% } %>
            </ol>
            <div class="carousel-inner">
                <% for(i = 0; i < data.length; i++){ %>
                <% if(data[i].featured){ %>
                <% if(i == 1){ %>
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/images/<%= data[i].title.replace(/\s/g, '') %>.jpg"
                         alt="First slide">
                    <div class="carousel-caption d-none d-md-block" style="color:  white; background-color: rgba(240, 242, 243, 0.5);">
                        <h3><%= data[i].title %></h3>
                        <h5><%= data[i].description %></h5>
                    </div>
                </div>
                <% }else{ %>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/images/<%= data[i].title.replace(/\s/g, '') %>.jpg" alt="First slide">
                    <div class="carousel-caption d-none d-md-block"style="color:  black;">
                        <h3><%= data[i].title %></h3>
                        <h5><%= data[i].description %></h5>
                    </div>
                </div>
                <% } %>
                <% } %>
                <% } %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<% include partials/chatbot %>

<link rel="stylesheet" type="text/css" href="/stylesheets/style.css"/>
</body>
</html>
