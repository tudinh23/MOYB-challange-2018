<!-- views/pages/market.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/header%>
</head>
<body>
<div class="nav-container">
    <% include partials/nav%>
</div>
<div class="container">
<div class="container-fluid mt-4">
    <div class="row">
        <% for(i = 0; i < data.length; i++){ %>
        <div class="col-mb align-self-center">
            <div class="card" style="width: 19rem;">
                <img class="card-img-top" src="//placehold.it/500x500" alt="Card image cap">
                <div class="card-body">
                    <%if(data[i].type == "listing"){%>
                    <h5 class="card-title">[LISTING] <%=data[i].title%></h5>
                    <%}else if(data[i].type == "request"){%>
                    <h5 class="card-title">[REQUEST] <%=data[i].title%></h5>
                    <%}%>
                    <p class="card-text"><%=data[i].description%></p>
                    <form method="post" action="/listing">
                        <button type="submit" name="buttonType" value="<%=data[i].title%>" class="btn btn-primary">More Info</button>
                    </form>
                </div>
            </div>
        </div>
        <%}%>
    </div>
</div>
</div>

<footer>
</footer>

<link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
</body>
</html>
